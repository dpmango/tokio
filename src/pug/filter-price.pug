extends shared/_layout
block content
  
  // INTRO HEADER
  .intro-header
    a(href="intro.html").intro-logo.intro-logo--no-mark
      include ../inline-svg/logo.svg
      
  // NAVIGATION
  .page-nav
    .container
      a(href="filter.html").page-nav__prev
        +icon('ico-left-arrow')
      
  // STEP 2
  .intro
    .container
      .intro__name По цене
      
      .intro__instruction Выберите вино по типу блюд, с которыми оно сочетается
      
      // tags
      .intro__range
        .ui-range__from
        .ui-range__to
        .ui-range
          
      
      // show results link
      .intro__show-results
        a(href="catalog.html") Показать результат (<span>23</span>)
          
      .intro__cta
        a(href='catalog.html').btn.btn-primary Перейти в полный каталог вин
